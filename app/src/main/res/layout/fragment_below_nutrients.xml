<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/nutrients_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:text="С начала дня Вы употребили:"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TableLayout
            android:id="@+id/nutrients_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nutrients_proteins"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:text="@string/how_much_proteins_text"
                    android:textColor="@color/nutrientBlue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nutrients_proteins_values"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nutrients_fat"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:text="@string/how_much_fats_text"
                    android:textColor="@color/nutrientYellow"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nutrients_fat_values"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nutrients_carbohydrates"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:text="@string/how_much_carbohydrates_text"
                    android:textColor="@color/nutrientGreen"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nutrients_carbohydrates_values"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </TableRow>

        </TableLayout>

        <View
            android:id="@+id/horizontal_line_low"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="16dp"
            android:background="@color/primary_dark" />

        <TextView
            android:id="@+id/nutrients_lower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:text="Идеальное соотношение нутриентов для активного образа жизни: 35% — белки, 15% — жиры и 50% — углеводы."
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>